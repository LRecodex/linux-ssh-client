<Window x:Class="LrecodexTerm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LrecodexTerm" Height="720" Width="1200"
        Background="{StaticResource BgBrush}">
  <DockPanel>
    <Border DockPanel.Dock="Top" Background="#0F1520" Padding="10">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
          <Image Width="20" Height="20" Source="Assets/LrecodexTerm.png"/>
          <TextBlock Text="LrecodexTerm" Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"/>
          <TextBlock Text="SSH + SFTP" Foreground="{StaticResource MutedBrush}" Margin="8,0,0,0"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
          <Button x:Name="ConnectBtn" Content="Connect" Padding="10,4"/>
          <Button x:Name="DisconnectBtn" Content="Disconnect" Padding="10,4"/>
          <Button x:Name="SyncBtn" Content="Sync" Padding="10,4"/>
          <Button x:Name="RefreshBtn" Content="Refresh" Padding="10,4"/>
        </StackPanel>
      </Grid>
    </Border>

    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="260"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!-- Sidebar -->
      <Border Background="{StaticResource PanelBrush}" Padding="10">
        <DockPanel>
          <TextBlock DockPanel.Dock="Top" Text="Sessions" Foreground="{StaticResource TextBrush}" FontWeight="SemiBold" Margin="0,0,0,8"/>
          <TextBox x:Name="SessionFilter" Height="30" Margin="0,0,0,8"/>
          <ListBox x:Name="SessionsList" DisplayMemberPath="Name" />
          <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
            <Button x:Name="NewSessionBtn" Content="New"/>
            <Button x:Name="EditSessionBtn" Content="Edit"/>
            <Button x:Name="DeleteSessionBtn" Content="Delete"/>
          </StackPanel>
        </DockPanel>
      </Border>

      <!-- Content -->
      <Grid Grid.Column="1" Margin="10">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="220"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="Remote:" Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
          <TextBox x:Name="RemotePath" Width="500" Height="30"/>
        </StackPanel>

        <DataGrid x:Name="FilesGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column">
          <DataGrid.ContextMenu>
            <ContextMenu>
              <MenuItem Header="Open" Click="OpenItem_Click" />
              <MenuItem Header="Open With..." Click="OpenWithItem_Click" />
              <Separator/>
              <MenuItem Header="Download" Click="DownloadItem_Click" />
              <MenuItem Header="Upload File..." Click="UploadFileItem_Click" />
              <MenuItem Header="Upload Folder..." Click="UploadFolderItem_Click" />
              <Separator/>
              <MenuItem Header="Rename..." Click="RenameItem_Click" />
              <MenuItem Header="Delete" Click="DeleteItem_Click" />
              <Separator/>
              <MenuItem Header="Compress..." Click="CompressItem_Click" />
              <MenuItem Header="Extract Here" Click="ExtractItem_Click" />
            </ContextMenu>
          </DataGrid.ContextMenu>
          <DataGrid.Columns>
            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" SortMemberPath="Name"/>
            <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="120" SortMemberPath="Size"/>
            <DataGridTextColumn Header="Modified" Binding="{Binding Modified}" Width="200" SortMemberPath="Modified"/>
          </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Background="#000" BorderBrush="#333" BorderThickness="1" Padding="6">
          <DockPanel>
            <TextBox x:Name="TerminalOutput" FontFamily="Consolas" FontSize="12" Background="#000" Foreground="#CFE5FF" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            <TextBox x:Name="TerminalInput" DockPanel.Dock="Bottom" FontFamily="Consolas" FontSize="12" Background="#0b0f14" Foreground="#CFE5FF" Height="28"/>
          </DockPanel>
        </Border>

        <TextBlock x:Name="StatusText" Grid.Row="3" Text="Status: Disconnected" Foreground="{StaticResource MutedBrush}" Margin="0,6,0,0"/>
      </Grid>
    </Grid>
  </DockPanel>
</Window>
